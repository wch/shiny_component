{
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "editor.tabSize": 2,
  "files.encoding": "utf8",
  "files.eol": "\n",
  "[javascript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.formatOnSave": false,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[r]": {},
  "python.formatting.provider": "black",
  "python.linting.flake8Enabled": true,
  "python.linting.flake8Args": ["--config", "./py/setup.cfg"],
  "[python]": {
    "editor.formatOnSave": true,
    "editor.tabSize": 4,
    "editor.codeActionsOnSave": {
      "source.organizeImports": true
    },
    "editor.rulers": [88],
    "editor.defaultFormatter": "ms-python.black-formatter"
  },
  "isort.args": ["--profile", "black"],
  "prettier.prettierPath": "./js/node_modules/prettier",
  "eslint.workingDirectories": ["./js"],
  "files.exclude": {
    ".venv/": true,
    "**/__pycache__": true,
    "**/.Rproj.user": true,
    // "**/node_modules": true,
    "py/build": true,
    "venv/": true
  },
  "search.exclude": {
    ".venv/": true,
    "**/__pycache__": true,
    "**/.Rproj.user": true,
    "**/node_modules": true,
    "**/*.egg-info": true,
    "**/*.js.map": true,
    "py/build": true,
    "venv/": true
  },

  "cssVariables.lookupFiles": [
    "**/*.css",
    "**/*.scss",
    "**/*.sass",
    "**/*.less",
    "node_modules/open-props/open-props.min.css"
  ],

  // Stylelint settings
  // Turnoff default linters from vscode
  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,

  // Setup extension settings
  "stylelint.validate": ["css", "less", "postcss", "typescript"],
  "stylelint.configBasedir": "js",
  "stylelint.reportNeedlessDisables": true,
  "stylelint.snippet": ["css", "less", "postcss", "typescript"],
  "lit-plugin.rules.no-invalid-css": "off",
  "editor.formatOnType": false
}
